<!DOCTYPE html>
<html lang="en">
    <head>
         <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css">
         <link rel="stylesheet" type="text/css" href="Content/style.css">
         <meta charset="UTF-8">
         <title>Login & Registration</title>
    </head>
    <body>
        <center>
            <div class="form">
                <h4>Register</h4>
                <form action="/register" method="post">
                    <p><input type="text" name="first_name" placeholder="First Name"></p>
                    <p><input type="text" name="last_name" placeholder="Last Name"></p>
                    <p><input type="email" name="email" placeholder="Email"></p>
                    <p><input type="password" name="password" placeholder="Password"></p>
                    <p><input class="button-primary" type="submit" value="Register"></p>
                </form> 
            </div>   
            <div class="form">      
                <h4>Login</h4>
                <form action="/login" method="post">
                    <p><input type="email" name="email" placeholder="Email"></p>
                    <p><input type="password" name="password" placeholder="Password"></p>
                    <p><input class="button-primary" type="submit" value="Login"></p>
                </form>
            </div>
            @If.Context.ViewBag.error
                <i><h5 class="error">All fields must be completely filled in</h5></i>
            @EndIf

        </center>
    </body>
</html>